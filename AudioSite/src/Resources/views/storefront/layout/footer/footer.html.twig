{% extends "storefront/layout/footer/footer.html.twig" %} {% block
layout_footer_inner_container %}
<div class="row footer-div mb-5 mt-5">
    {% block layout_footer_navigation_hotline %}
    <div class="col-md-3 footer-column js-footer-column">
        {% block layout_footer_navigation_hotline_headline %}
        <div
            class="footer-column-headline text-white fb-icon footer-headline js-footer-column-headline js-collapse-footer-column-trigger"
            id="collapseFooterHotlineTitle"
            {{
            dataBsTargetAttr
            }}="#collapseFooterHotline"
            aria-expanded="true"
            aria-controls="collapseFooterHotline"
            role="listitem"
        >
            {{ "footer.newsletter" | trans | sw_sanitize }} {% block
            layout_footer_navigation_hotline_icons %}
            <div class="footer-column-toggle">
                <span class="footer-plus-icon"> {% sw_icon 'plus' %} </span>
                <span class="footer-minus-icon"> {% sw_icon 'minus' %} </span>
            </div>
            {% endblock %}
        </div>
        {% endblock %} {% block layout_footer_navigation_hotline_content %}
        <div
            id="collapseFooterHotline"
            class="footer-column-content collapse js-footer-column-content footer-contact"
            aria-labelledby="collapseFooterHotlineTitle"
        >
            <div class="footer-column-content-inner">
                <p class="footer-contact-hotline">
                    {{ "footer.promise" | trans | sw_sanitize }}
                </p>
            </div>
        </div>
        {% endblock %}
    </div>
    <div class="col-md-6 footer-column js-footer-column">
        {% block layout_footer_navigation_hotline_headline_1 %}
        <div
            class="footer-column-headline footer-headline js-footer-column-headline js-collapse-footer-column-trigger"
            id="collapseFooterHotlineTitle"
            {{
            dataBsTargetAttr
            }}="#collapseFooterHotline"
            aria-expanded="true"
            aria-controls="collapseFooterHotline"
            role="listitem"
        >
            <form action="#" class="w-100">
                <div class="mb-3 w-100 position-relative">
                    <input
                        type="email"
                        class="form-control p-4"
                        id="email"
                        placeholder="Enter email"
                        name="email"
                    />
                    <span class="footer-font-icon position-absolute"
                        ><i class="fa-regular fa-paper-plane fa-lg"></i
                    ></span>
                </div>
            </form>
            {% block layout_footer_navigation_hotline_icons_1 %}
            <div class="footer-column-toggle">
                <span class="footer-plus-icon"> {% sw_icon 'plus' %} </span>
                <span class="footer-minus-icon"> {% sw_icon 'minus' %} </span>
            </div>
            {% endblock %}
        </div>
        {% endblock %}
    </div>
    <div class="col-md-3 footer-column js-footer-column">
        {% block layout_footer_navigation_hotline_headline_2 %}
        <div
            class="footer-column-headline footer-headline js-footer-column-headline js-collapse-footer-column-trigger"
            id="collapseFooterHotlineTitle"
            {{
            dataBsTargetAttr
            }}="#collapseFooterHotline"
            aria-expanded="true"
            aria-controls="collapseFooterHotline"
            role="listitem"
        >
            <div class="d-flex justify-content-around">
                <div
                    class="social-icons rounded-circle text-center d-flex justify-content-center align-items-center"
                >
                    <i class="fa-brands text-dark fa-facebook-f"></i>
                </div>
                <div
                    class="social-icons rounded-circle text-center d-flex justify-content-center align-items-center"
                >
                    <i class="fa-brands text-dark fa-twitter"></i>
                </div>
                <div
                    class="social-icons rounded-circle text-center d-flex justify-content-center align-items-center"
                >
                    <i class="fa-brands text-dark fa-google-plus-g"></i>
                </div>
                <div
                    class="social-icons rounded-circle text-center d-flex justify-content-center align-items-center"
                >
                    <i class="fa-brands text-dark fa-pinterest-p"></i>
                </div>
                <div
                    class="social-icons rounded-circle text-center d-flex justify-content-center align-items-center"
                >
                    <i class="fa-brands text-dark fa-instagram"></i>
                </div>
            </div>
        </div>
        {% endblock %}
    </div>
    {% endblock %}
</div>
<div class="row footer-division-2 mb-5 mt-5">
    {% block layout_footer_navigation_columns %}

    {{ parent() }}
    {% endblock %}
</div>
{% block layout_footer_bottom %}
<div
    class="footer-div-3 mb-0 mt-5 d-flex flex-column flex-md-row justify-content-between align-items-center"
>
    <div class="copyrights">
        {{ "footer.copyrights" | trans | sw_sanitize }}
    </div>
    <div>
        <ul
            class="text-decoration-none list-unstyled d-flex justify-content-between copyrights"
        >
            <li><i class="fa-brands fa-cc-visa mx-2"></i></li>
            <li><i class="fa-brands fa-cc-mastercard mx-2"></i></li>
            <li><i class="fa-brands fa-cc-amex mx-2"></i></li>
            <li><i class="fa-brands fa-cc-discover mx-2"></i></li>
            <li><i class="fa-brands fa-cc-paypal mx-2"></i></li>
            <li><i class="fa-brands fa-cc-diners-club mx-2"></i></li>
            <li><i class="fa-brands fa-cc-stripe mx-2"></i></li>
        </ul>
    </div>
</div>
{% endblock %} {% endblock %}
